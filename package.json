{
  "name": "shared-routes",
  "version": "0.6.0",
  "description": "The shared-routes library",
  "repository": {
    "type": "git",
    "url": "git@github.com:JeromeBu/shared-routes.git"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "yarn build:cjs && yarn build:esm && yarn build:deno",
    "build:cjs": "tsc",
    "build:esm": "rm -rf dist/esm && tsc -p tsconfig.esm.json && js2mjs dist/esm",
    "build:deno": "denoify",
    "test": "vitest",
    "lint:check": "eslint . --ext .ts,.tsx",
    "lint": "npm run lint:check -- --fix",
    "_format": "prettier '**/*.{ts,tsx,json,md}'",
    "format": "npm run _format -- --write",
    "format:check": "npm run _format -- --list-different",
    "link-in-app": "ts-node --skipProject scripts/link-in-app.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -v"
    }
  },
  "author": "u/jeromebu",
  "license": "MIT",
  "files": [
    "src/",
    "dist/",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "keywords": [],
  "homepage": "https://github.com/JeromeBu/shared-routes",
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "axios": "^0.26.0",
    "denoify": "^1.5.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.18.2",
    "husky": "^4.3.8",
    "js2mjs": "^0.3.0",
    "lint-staged": "^11.1.1",
    "openapi-types": "^12.1.0",
    "prettier": "^2.3.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.0"
  },
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "module": "dist/esm/core/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/core/index.js",
      "import": "./dist/esm/core/index.mjs",
      "types": "./dist/core/index.d.ts"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/esm/*.mjs",
      "types": "./dist/*.d.ts"
    }
  }
}
