{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["es2015", "DOM", "ES2019.Object"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "newLine": "LF",
    "incremental": true,
    "strict": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.deno.ts", "src/**/*.deno.tsx"]
}
